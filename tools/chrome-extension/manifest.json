{
  "manifest_version": 3,
  "name": "视频转文字稿助手",
  "version": "1.0.0",
  "description": "快速选择 B 站或 YouTube 视频，批量生成文字稿",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.bilibili.com/*",
    "https://youtube.com/*",
    "https://www.youtube.com/*",
    "http://localhost:8765/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.bilibili.com/*",
        "https://youtube.com/*",
        "https://www.youtube.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

